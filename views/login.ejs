<div class="main-background">
  <div class="sub-background">
    <h1>양 한 마리</h1>
    <h2 style="margin-top: 20px;">저의 페이지에 방문해주셔서</h2>
    <h2 style="margin-top: 10px;">감사합니다.</h2>
  </div>
  <div class="login-box">
    <form class="container" action="/api/users/login" method="POST">
      <div class="mb-3">
        <input type="text" class="form-control" placeholder="아이디를 입력하세요." aria-describedby="emailHelp" name="id">
      </div>
      <div class="mb-3">
        <input type="password" class="form-control" placeholder="비밀번호를 입력하세요." name="password">
      </div>

      <div class="d-flex">
        <div class="form-check">
          <input class="form-check-input" type="radio" name="type" id="flexRadioDefault1" value="customer">
          <label class="form-check-label" for="flexRadioDefault1">customer</label>
        </div>
        <div class="form-check ms-5">
          <input class="form-check-input" type="radio" name="type" id="flexRadioDefault2" value="driver">
          <label class="form-check-label" for="flexRadioDefault2">driver</label>
        </div>
      </div>

      <button type="submit" class="btn btn-primary mt-3" style="width: 100%;">로그인</button>
      <hr>
      <button type="button" class="btn btn-success btn-signup" style="display: inline-block;">새 계정 만들기</button>
    </form>
  </div>
</div>

<script>

  $('.btn-signup').on('click', () => location.href = '/register')

</script>